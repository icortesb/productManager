<div>
    <h1>PRODUCTS</h1>
    <h2> Bienvenido {{#if user.user}}{{user.user}}{{else}}{{user}}{{/if}}</h2> {{!-- Si no tengo user.user muestro user, que seria solo para cuando es admincoder --}}
    <p>Rol:{{#if user.role}}{{user.role}}{{else}}Admin{{/if}}</p>
    <p>Cart: {{user.cart}}</p>

    <ul>
        {{#each products}}
        <li>
            <p>{{this.title}}</p>
            <p>{{this.description}}</p>
            <p>Price:{{this.price}}</p>
            <p>Category:{{this.category}}</p>
            <form action="/api/carts/{{../user.cart}}/products/{{this._id}}" method="POST">
                <button type="submit">Add to cart</button>
            </form>
        </li>
        {{/each}}
    </ul>
    
    <a href="/auth/logout">Logout</a>
</div>